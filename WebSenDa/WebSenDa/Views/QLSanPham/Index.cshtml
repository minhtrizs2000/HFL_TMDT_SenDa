@model WebSenDa.Models.ViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="text-center">Danh Sách Sản Phẩm</h2>

<div class="d-flex justify-content-around">
    <a href="@Url.Action("Create","QLSanPham")" class="btn btn-primary user-btn-them mt-3">Thêm mới sản phẩm</a>

    @using (Html.BeginForm("Index", "QLSanPham", FormMethod.Get))
    {
        <div class="row mt-3">
            <input class="user-input-search ml-3" type="text" placeholder="Nhập từ khóa tìm kiếm..." name="search" />

            <button class="btn btn-search btn-info ml-3" type="submit"><i class="fas fa-search"></i> Tìm kiếm</button>

            <a href='@Url.Action("Index", "QLSanPham")' class="btn btn-reload btn-secondary ml-3"><i class="fas fa-sync-alt"></i> Tải lại</a>
        </div>
    }
</div>

<table class="table table-bordered table-hover mt-3">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.kho.IDSanPham)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sanPham.TenSanPham)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sanPham.Hinh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sanPham.LoaiSanPham.TenLoaiSanPham)
            </th>
            <th scope="col" class="text-center"><i class="fa fa-cog"></i></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ListSanPham)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IDSanPham)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenSanPham)
                </td>
                <td class="text-center">
                    <img src="@Url.Content(item.Hinh)" width="100" height="100" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LoaiSanPham.TenLoaiSanPham)
                </td>
                <td class="text-center ">
                    <a class="btn btn-warning mr-3" href="@Url.Action("Edit",new { id=item.IDSanPham})"><span style="margin-right:0px" class="fas fa-pencil-alt"></span></a>
                    <a class="btn btn-info " href="@Url.Action("Details",new { id=item.IDSanPham})"><span style="margin-left:0px" class="far fa-clipboard"></span></a>
                </td>
            </tr>
        }
    </tbody>
</table>
