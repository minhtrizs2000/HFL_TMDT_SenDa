@model WebSenDa.Models.ViewModel

@{
    ViewBag.Title = "IndexDiaChi";
    Layout = "~/Views/Shared/_LayoutProfile.cshtml";
}

<link href="~/Content/KhachHang/Detail.css" rel="stylesheet" />

<style>
    .menu_btn a {
        width: 100%;
        margin-bottom: 30px;
    }
</style>

@{ int count = 0; }
<div class="col-12">
    <button type="button" class="btn btn-info mb-4 ml-2" data-toggle="modal" data-target="#addNewModal">
        Thêm địa chỉ mới
    </button>
    <!-- Add New Modal -->
    <div class="modal fade" id="addNewModal" tabindex="-1" aria-labelledby="deleteModal" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Thêm địa chỉ mới</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @using (Html.BeginForm("CreateDiaChi", "KhachHang", FormMethod.Post))
                    {
                        <div class="row">
                            <div class="col-4 py-3">
                                <h5>Khu vực/Tỉnh thành</h5>
                            </div>
                            <div class="col-8 py-3">
                                <input type="text" list="kv" name="KhuVuc">
                                <datalist id="kv">
                                    <option value="TP.HCM">Thành Phố Hồ Chí Minh</option>
                                </datalist>
                            </div>
                            <div class="col-4 py-3">
                                <h5>Quận/Huyện</h5>
                            </div>
                            <div class="col-8 py-3">
                                <input type="text" name="Quan/Huyen" />
                            </div>
                            <div class="col-4 py-3">
                                <h5>Phường/Xã</h5>
                            </div>
                            <div class="col-8 py-3">
                                <input type="text" name="Phuong/Xa" />
                            </div>
                            <div class="col-4 py-3">
                                <h5>Số nhà/Đường</h5>
                            </div>
                            <div class="col-8 py-3">
                                <input type="text" name="SoNhaDuong" />
                            </div>
                            <div class="col-5"></div>
                            <button type="submit" class="btn btn-warning">Thêm địa chỉ</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    @foreach (var dc in Model.ListDiaChi)
    {
        count++;
        if (dc.IDKhachHang == Model.khachHang.IDKhachHang)
        {
            if (count == 1)
            {
                <div class="d-flex justify-content-between text-center py-2" style="background: #00ff0050;">
                    <h5 style="font-weight: 700;">@count _ @dc.DiaChi1</h5>
                    <div>
                        <a href="/KhachHang/EditDiaChi/@dc.IDDiaChi" class="btn btn-warning">Sửa</a>
                        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal">
                            Xóa
                        </button>
                        <!-- Delete Modal -->
                        <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModal" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Xóa địa chỉ</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <strong>Bạn có chắc chắn muốn xóa địa chỉ:</strong> <br /> @count _ @dc.DiaChi1
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>

                                        @using (Html.BeginForm("DeleteDiaChi", "KhachHang", new { id = dc.IDDiaChi }))
                                        {
                                            <input type="submit" onclick="" class="btn btn-danger" value="Xác nhận" />

                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <hr />
            }
            else
            {
                <div class="d-flex justify-content-between text-center py-2">
                    <h5 style="font-weight: 500;">@count _ @dc.DiaChi1</h5>
                    <div>
                        <a href="/KhachHang/EditDiaChi/@dc.IDDiaChi" class="btn btn-warning">Sửa</a>
                        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal">
                            Xóa
                        </button>
                        <!-- Delete Modal -->
                        <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModal" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Xóa địa chỉ</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <strong>Bạn có chắc chắn muốn xóa địa chỉ:</strong> <br /> @count _ @dc.DiaChi1
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>

                                        @using (Html.BeginForm("DeleteDiaChi", "KhachHang", new { id = dc.IDDiaChi }))
                                        {
                                            <input type="submit" onclick="" class="btn btn-danger" value="Xác nhận" />

                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <hr />
            }
        }
        else
        {
            count--;
        }
    }
</div>

