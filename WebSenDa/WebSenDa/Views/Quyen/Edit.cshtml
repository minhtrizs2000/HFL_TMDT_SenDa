@model WebSenDa.Models.ViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}

<h2 class="text-center">Sửa Quyền</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.quyen.IDQuyen)

        <div class="form-group wrap-flex-align-center">
            @Html.LabelFor(model => model.quyen.TenQuyen, htmlAttributes: new { @class = "control-label col-md-offset-1 col-md-2 col-sm-4 font-weight-bold" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.quyen.TenQuyen, new { htmlAttributes = new { @class = "form-control col-md-10 col-sm-8" } })
                @Html.ValidationMessageFor(model => model.quyen.TenQuyen, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-primary" style="width: 80px" />
            </div>
        </div>
    </div>
}

<div class="col-md-offset-2 col-md-10 form-group">
    <a class="btn btn-info" href="@Url.Action("Index","Quyen")">Quay lại</a>
</div>

