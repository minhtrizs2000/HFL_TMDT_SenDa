@model WebSenDa.Models.ViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}

<h2 class="text-center">Sửa Tài Khoản</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.nhanVien.IDNhanVien)

        <div class="form-group wrap-flex-align-center">
            @Html.LabelFor(model => model.nhanVien.IDLoaiTaiKhoan, "IDLoaiTaiKhoan", htmlAttributes: new { @class = "control-label col-md-offset-1 col-md-2 col-sm-4 text-bold" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.nhanVien.IDLoaiTaiKhoan, (SelectList)ViewBag.listLoaiTK, "-- Chọn Loại Tài Khoản --", htmlAttributes: new { @class = "form-control col-md-10 col-sm-8 text-align-center" })
                @Html.ValidationMessageFor(model => model.nhanVien.IDLoaiTaiKhoan, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group wrap-flex-align-center">
            @Html.LabelFor(model => model.nhanVien.IDQuyen, "IDQuyen", htmlAttributes: new { @class = "control-label col-md-offset-1 col-md-2 col-sm-4 text-bold" })
            @Html.DropDownListFor(m => m.nhanVien.IDQuyen, (SelectList)ViewBag.listQuyen, "-- Chọn Quyền --", htmlAttributes: new { @class = "form-control col-md-8 col-sm-8 text-align-center ml-3" })
            @Html.ValidationMessageFor(model => model.nhanVien.IDQuyen, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group wrap-flex-align-center">
        @Html.LabelFor(model => model.nhanVien.TenTaiKhoan, htmlAttributes: new { @class = "control-label col-md-offset-1 col-md-2 col-sm-4 text-bold" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.nhanVien.TenTaiKhoan, new { htmlAttributes = new { @class = "form-control col-md-10 col-sm-8" } })
            @Html.ValidationMessageFor(model => model.nhanVien.TenTaiKhoan, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group wrap-flex-align-center">
        @Html.LabelFor(model => model.nhanVien.MatKhau, htmlAttributes: new { @class = "control-label col-md-offset-1 col-md-2 col-sm-4 text-bold" })
        <div class="col-md-10">
