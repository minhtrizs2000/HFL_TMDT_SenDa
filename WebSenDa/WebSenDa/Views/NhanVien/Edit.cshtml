            @Html.ValidationMessageFor(model => model.nhanVien.MatKhau, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group wrap-flex-align-center">
        @Html.LabelFor(model => model.nhanVien.TenNhanVien, htmlAttributes: new { @class = "control-label col-md-offset-1 col-md-2 col-sm-4 text-bold" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.nhanVien.TenNhanVien, new { htmlAttributes = new { @class = "form-control col-md-10 col-sm-8" } })
            @Html.ValidationMessageFor(model => model.nhanVien.TenNhanVien, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group wrap-flex-align-center">
        @Html.LabelFor(model => model.nhanVien.SoDienThoai, htmlAttributes: new { @class = "control-label col-md-offset-1 col-md-2 col-sm-4 text-bold" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.nhanVien.SoDienThoai, new { htmlAttributes = new { @class = "form-control col-md-10 col-sm-8" } })
            @Html.ValidationMessageFor(model => model.nhanVien.SoDienThoai, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group wrap-flex-align-center">
