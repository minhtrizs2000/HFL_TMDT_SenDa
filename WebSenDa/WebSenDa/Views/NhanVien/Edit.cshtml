            @Html.ValidationMessageFor(model => model.nhanVien.CMND, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group wrap-flex-align-center">
        @Html.LabelFor(model => model.nhanVien.Email, htmlAttributes: new { @class = "control-label col-md-offset-1 col-md-2 col-sm-4 text-bold" })
