            @Html.ValidationMessageFor(model => model.nhanVien.AnhDaiDien, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Lưu" class="btn btn-primary" style="width:80px" />
        </div>
    </div>


}


<div class="form-group col-md-offset-2 col-md-10">
    <a class="btn btn-info" href="@Url.Action("Index","NhanVien")">Quay lại</a>
</div>
